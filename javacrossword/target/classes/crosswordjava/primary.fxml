<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="crosswordjava.PrimaryController">
   <top>
      <VBox alignment="CENTER" spacing="5">
         <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
         </padding>
         <children>
            <Label text="Crossword Puzzle" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <HBox alignment="CENTER" spacing="12">
               <children>
                  <Button fx:id="newGameButton" text="New Game" style="-fx-font-size: 12px;" />
                  <Button fx:id="checkButton" text="Check" style="-fx-font-size: 12px;" />
                  <Button fx:id="hintButton" text="Hint" style="-fx-font-size: 12px;" />
                  <Button fx:id="settingsButton" text="Help" onAction="#switchToSecondary" style="-fx-font-size: 12px;" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <GridPane fx:id="crosswordGridPane" alignment="CENTER" hgap="2" vgap="2">
         <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
         </padding>
      </GridPane>
   </center>
   
   <right>
      <VBox spacing="5" prefWidth="170"> <!-- Further reduced from 180 to 170 -->
         <padding>
            <Insets bottom="5" left="5" right="5" top="5" />
         </padding>
         <children>
            <ScrollPane fitToWidth="true" prefHeight="170">
               <content>
                  <VBox fx:id="acrossCluesBox" spacing="3">
                     <padding>
                        <Insets bottom="3" left="5" right="5" top="3" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <ScrollPane fitToWidth="true" prefHeight="170">
               <content>
                  <VBox fx:id="downCluesBox" spacing="3">
                     <padding>
                        <Insets bottom="3" left="5" right="5" top="3" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </right>
   
   <bottom>
      <HBox alignment="CENTER" spacing="10">
         <padding>
            <Insets bottom="5" left="10" right="10" top="2" />
         </padding>
         <children>
            <Label text="Fill in the crossword puzzle using the clues provided." style="-fx-font-size: 11px;" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
